@inherits Umbraco.Web.Mvc.UmbracoViewPage<MySite.Models.ContactModel>

@using (Html.BeginUmbracoForm<MySite.Controllers.ContactController>("FormPost")){
    <div class="container contact-form-container">
        <h1 class="main-headline"><strong>Contact</strong>Me</h1>       
        <div class="form-group">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Message", rows = "4", cols = "50" })
        </div>
        <div>
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
}

